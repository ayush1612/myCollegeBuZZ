<% include ../partials/header %>

<div class="container">
   <header class="jumbotron">
        <div class="container">
            <h1>Hi There!</h1>
            <p>
                What's going around you ? ;)
            </p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Event</a>

            </p>
        </div>
    </header>

    <div class="row  text-center" style="display:flex; flex-wrap:wrap;">
        <% for(var i=0;i<campgrounds.length;i++){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgrounds[i].image %>" alt="image">        
                
                    <div class="caption">
                        <strong><h4><%= campgrounds[i].name %></h4></strong>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
                    </p>
                
            </div>
         </div>
    <% } %>
    </div>
   
<% include ../partials/footer %>
